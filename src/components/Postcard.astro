<div
  id="postcard"
  class="w-full max-w-2xl mx-auto p-3 aspect-[1.58] stripes shadow-2xl shadow-purple-900"
>
  <form
    name="contact"
    method="POST"
    netlify-honeypot="bot-field"
    data-netlify="true"
    class="relative h-full flex flex-col justify-between py-4 px-8 bg-white"
    aria-labelledby="contact-title"
  >
    <p class="hidden" aria-hidden="true">
      <label>
        Don't fill this out if you're human: <input name="bot-field" />
      </label>
    </p>
    <label for="message" class="text-sm sm:text-xl font-bold tracking-wider">Dear Tyler,</label>
    <textarea
      id="message"
      name="message"
      placeholder="u have a nice page"
      rows="3"
      data-min-rows="3"
      class="form-input text-center resize-none autoExpand"></textarea>
    <div class="place-self-end -mr-5">
      <label for="sender" class="font-bold tracking-wider -mr-2 cursor-default text-sm sm:text-xl"
        >From</label
      >
      <input
        id="sender"
        name="sender"
        placeholder="Your name"
        type="text"
        class="form-input ml-3 pt-px min-w-[6ch] w-[12ch] max-w-sm"
      />
    </div>
    <button
      id="submit"
      disabled
      type="submit"
      class="absolute bottom-[-84px] right-4 rotate-6 px-8 py-2 rounded-full cursor-pointer font-bold text-white sm:text-2xl disabled:cursor-not-allowed disabled:shadow-transparent disabled:opacity-50 bg-teal-500 border-transparent shadow-teal-700 shadow-xl border-4 enabled:hover:bg-gradient-to-br enabled:hover:from-teal-400 enabled:hover:to-teal-600 enabled:hover:border-teal-300 focus:bg-teal-600 focus:border-teal-300"
      >OK!</button
    >
  </form>

  <aside
    id="success"
    class="hidden w-full h-full place-items-center bg-white relative"
    role="status"
    aria-live="polite"
  >
    <p
      class="absolute rotate-12 right-0 top-0 sm:top-2 sm:right-2 text-7xl sm:text-8xl text-rose-300"
    >
      â˜º
    </p>
    <div class="-rotate-6">
      <p
        class="text-4xl sm:text-5xl text-blue-600/75 font-black text-center w-full py-4 tracking-wider"
      >
        Hey, thanks!
      </p>
    </div>
  </aside>
</div>

<script>
  // Import using relative path - Astro will bundle this
  import { initPostcard } from './postcard-client.js';

  if (typeof window !== 'undefined') {
    Promise.resolve().then(() => {
      try {
        initPostcard();
      } catch (err) {
        console.error('postcard init failed', err);
      }
    });
  }
</script>

<style>
  /* Scoped postcard stripes (moved from global.css) */
  :root {
    --white: #fff;
    --red: #ca1f0e;
    --blue: #3251ac;
  }

  #postcard.stripes {
    background-image: linear-gradient(
      135deg,
      var(--red) 11.11%,
      var(--white) 11.11%,
      var(--white) 25%,
      var(--blue) 25%,
      var(--blue) 36.11%,
      var(--white) 36.11%,
      var(--white) 50%,
      var(--red) 50%,
      var(--red) 61.11%,
      var(--white) 61.11%,
      var(--white) 75%,
      var(--blue) 75%,
      var(--blue) 86.11%,
      var(--white) 86.11%,
      var(--white) 100%
    );
    background-size: 127.28px 127.28px;
  }
</style>
