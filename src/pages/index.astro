---
import Layout from '../layouts/Layout.astro';
import Postcard from '../components/Postcard.astro';
---

<Layout>
  <head slot="head">
    <title>Tyler Campbell</title>
    <meta
      name="description"
      content="Tyler Campbell is making things in the beautiful state of Georgia."
    />
    <meta name="author" content="Tyler Campbell" />

    <meta property="og:title" content="Tyler Campbell" />
    <meta
      property="og:description"
      content="Tyler Campbell is making things in the beautiful state of Georgia."
    />
    <meta property="og:image" content="/ogimage-ty-memoji-01.jpg" />

    <link rel="canonical" href="https://www.tylercampbell.com/" />

    <link
      rel="preload"
      href="/Nunito-VariableFont_wght.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
  </head>

  <main
    class="relative w-full h-screen grid place-items-start portrait:pt-[15vh] landscape:pt-[5vh] px-4 bg-sky-400"
  >
    <video
      autoplay
      loop
      muted
      playsinline
      class="fixed object-cover w-full h-full top-0 left-0 blur-md"
      ><source src="/clouds.mp4" type="video/mp4" />Your browser does not support the video element.</video
    >
    <div class="fixed mesh w-full h-full top-0 left-0 opacity-75"></div>

    <div id="contact" class="relative w-full">
      <h1
        class="mb-8 opacity-50 text-5xl sm:text-7xl font-black text-center text-indigo-50 text-shadow-lg text-shadow-blue-500"
        aria-label="Tyler Campbell"
      >
        <span class="-translate-y-0.5 !-mr-[0.35em]">T</span>
        <span class="translate-y-1">y</span>
        <span class="translate-y-1">l</span>
        <span class="translate-y-0.5">e</span>
        <span class="translate-y-0.5">r</span>
        <span class="landscape:inline portrait:hidden min-w-4 sm:min-w-6"> </span>
        <br class="landscape:hidden portrait:inline" />
        <span class="-translate-y-0.5 !-mr-[0.2em]">C</span>
        <span class="translate-y-0.5">a</span>
        <span class="-translate-y-0.5 !-mr-[0.24em]">m</span>
        <span class="translate-y-1">p</span>
        <span class="translate-y-0">b</span>
        <span class="-translate-y-1">e</span>
        <span class="-translate-y-0.5">l</span>
        <span class="translate-y-1">l</span>
      </h1>
      <p
        id="prompt"
        class="text-xl sm:text-2xl text-amber-800 font-bold text-center w-full py-4 tracking-wider"
      >
        Send this card to <span class="text-rose-600 text-shadow-lg text-shadow-sky-100">Tyler</span
        >?
      </p>

      <Postcard />
    </div>
  </main>
</Layout>
