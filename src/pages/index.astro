---
import Layout from '../layouts/Layout.astro';
import Postcard from '../components/Postcard.astro';
---

<Layout>
  <head slot="head">
    <title>Tyler Campbell</title>
    <meta
      name="description"
      content="Tyler Campbell is making things in the beautiful state of Georgia."
    />
    <meta name="author" content="Tyler Campbell" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta property="og:title" content="Tyler Campbell" />
    <meta
      property="og:description"
      content="Tyler Campbell is making things in the beautiful state of Georgia."
    />
    <meta property="og:image" content="/ogimage-ty-memoji-01.jpg" />
    <link rel="canonical" href="https://www.tylercampbell.com/" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <!-- Preload the critical font only; OG image is for social previews and not used in-page -->
    <link
      rel="preload"
      href="/Nunito-VariableFont_wght.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
  </head>

  <main class="relative w-full h-screen grid place-items-center px-4 bg-sky-400">
    <video
      autoplay
      loop
      muted
      playsinline
      class="absolute object-cover w-full h-full top-0 left-0 blur-md"
      ><source src="/clouds.mp4" type="video/mp4" />Your browser does not support the video element.</video
    >
    <div class="absolute mesh w-full h-full top-0 left-0 opacity-75"></div>

    <div id="contact" class="relative w-full -mt-12">
      <h1
        class="mb-8 opacity-50 text-7xl font-black text-center text-sky-100 text-shadow-lg text-shadow-blue-500"
      >
        Tyler Campbell
      </h1>
      <p
        id="prompt"
        class="text-xl sm:text-2xl text-amber-800 font-bold text-center w-full py-4 tracking-wider"
      >
        Send this card to <span class="text-black">Tyler</span>?
      </p>

      <Postcard />
    </div>
  </main>
</Layout>
