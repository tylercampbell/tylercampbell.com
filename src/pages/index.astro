---
import Layout from '../layouts/Layout.astro';
import Postcard from '../components/Postcard.astro';
---

<Layout>
  <head slot="head">
    <title>Tyler Campbell</title>
    <meta
      name="description"
      content="Tyler Campbell is making things in the beautiful state of Georgia."
    />
    <meta name="author" content="Tyler Campbell" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta property="og:title" content="Tyler Campbell" />
    <meta
      property="og:description"
      content="Tyler Campbell is making things in the beautiful state of Georgia."
    />
    <meta property="og:image" content="/ogimage-ty-memoji-01.jpg" />
    <link rel="canonical" href="https://www.tylercampbell.com/" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <!-- Preload the critical font only; OG image is for social previews and not used in-page -->
    <link
      rel="preload"
      href="/Nunito-VariableFont_wght.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
  </head>

  <a class="skip-link" href="#main-content">Skip to content</a>
  <main id="main-content" class="relative w-full h-screen grid place-items-center px-4 page-bg">
    <video
      autoplay
      loop
      muted
      playsinline
      class="absolute object-cover w-full h-full top-0 left-0 blur"
      ><source src="/clouds.mp4" type="video/mp4" />Your browser does not support the video element.</video
    >
    <div class="absolute mesh w-full h-full top-0 left-0 opacity-75"></div>

    <div id="contact" class="relative w-full -mt-12">
      <h1 class="text-6xl font-black text-center text-rose-600">Tyler Campbell</h1>
      <p
        id="prompt"
        class="text-xl sm:text-2xl text-orange-900 font-bold text-center w-full py-4 tracking-wider"
      >
        Send this card to <span class="text-orange-600">Tyler</span>?
      </p>

      <Postcard />
    </div>
  </main>

  <p class="-z-50 absolute bottom-4 block w-full text-center text-xs">
    <a class="text-transparent" rel="me" href="https://fosstodon.org/@tylercampbell"
      >tylercampbell@fosstodon.org</a
    >
    <a class="text-transparent" rel="me" href="https://mastodon.social/@tylerscramble"
      >tylerscramble@mastodon.social</a
    >
  </p>
</Layout>
